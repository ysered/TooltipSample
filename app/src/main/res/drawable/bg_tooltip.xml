<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:gravity="start"
        android:height="50dp"
        android:right="16dp">
        <shape
            android:dither="true"
            android:shape="rectangle">
            <corners
                android:bottomLeftRadius="@dimen/corner_radius"
                android:bottomRightRadius="@dimen/corner_radius"
                android:topLeftRadius="@dimen/corner_radius"
                android:topRightRadius="@dimen/corner_radius" />
            <solid android:color="@color/darkGreyOpacity65" />
        </shape>
    </item>
    <item
        android:drawable="@drawable/qp_tooltip_tail"
        android:left="32dp"
        android:gravity="end|center_vertical">
    </item>
</layer-list>
